<div>
    <% if @portion.errors.any? %>
        <p>Verifique os erros abaixo:</p>
        <ul class="flex flex-col gap-2">
        <%@portion.errors.full_messages.each do |msg|%>
            <li class="text-red-500"><%= msg%></li>
        <%end%>
        </ul>
    <%end%>
</div>

<%= form_with model: @portion, url: item_portions_path(@item.id) do |f|%>
    <div class="flex flex-col gap-7">
        <div>
            <%= f.label :description, "Descrição" %>
            <div class="peer border-none bg-transparent placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0">
                <%= f.text_field :description%>
            </div>
        </div>
        <div>
            <%= f.label :current_price, "Preço" %>
            <div class="peer border-none bg-transparent placeholder-transparent focus:border-transparent focus:outline-none focus:ring-0">
                <%= f.number_field :current_price, step: 0.01, min: 0 %>
            </div>
        </div>
        <div class="text-center block w-full rounded-lg bg-indigo-600 px-5 py-3 text-sm font-medium text-white">
            <%= f.submit 'Enviar'%>
        </div>
    </div>
<%end%>
