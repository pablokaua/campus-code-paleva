<% if @beverage.errors.any? %>
    <p>Verifique os erros abaixo:</p>
    <ul>
    <%@beverage.errors.full_messages.each do |msg|%>
        <li><%= msg%></li>
    <%end%>
    </ul>
<%end%>

<%= form_with model:@beverage do |f|%>
    <div>
        <%= f.label :name%>
        <%= f.text_field :name%>
    </div>
    <div>
        <%= f.label :description%>
        <%= f.text_field :description%>
    </div>
    <div>
        <%= f.label :calories%>
        <%= f.number_field :calories%>
    </div>
    <div>
        <%= f.label :alcoholic %>
        <%= f.radio_button :alcoholic, true, id: "alcoholic_true" %> Sim
        <%= f.radio_button :alcoholic, false, id: "alcoholic_false" %> NÃ£o
    </div>
    <div>
        <%= f.label :photo%>
        <%= f.file_field :photo%>
    </div>

    <%= f.submit 'Gravar'%>
<%end%>