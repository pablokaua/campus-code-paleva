<div class="flex min-w-full flex-col items-center gap-10">
    <h1 class="text-xl text-center">Meus Pratos</h1>

    <%= form_with(url: search_items_path,method: :get) do |f|%>
        <div class="text-center">
        <%= f.label :query, 'Buscar por item'%>
        </div>
        <div class="w-full rounded-md border-gray-200 py-2.5">
            <%= f.text_field :query%>
        </div>
        <div class="text-center w-full inline-block rounded border border-indigo-600 bg-indigo-600 px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500">
            <%= f.submit 'Buscar'%>
        </div>
    <%end%>

    <div class="inline-block rounded border border-indigo-600 px-12 py-3 text-sm font-medium text-indigo-600 hover:bg-indigo-600 hover:text-white focus:outline-none focus:ring active:bg-indigo-500">
        <%= link_to 'Registrar Prato', new_dish_path%>
    </div>

    <% @dishes.each do |dish|%>
        <%= render dish%>
    <%end%>
</div>